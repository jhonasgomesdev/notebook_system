<div class="card">
  <div class="card-header">
    <h1>Registrar Devolução do Notebook: <%= @notebook.identificacao_equipamento %></h1>
  </div>
  <div class="card-body">
    <p>
      <strong>Emprestado para:</strong> <%= @emprestimo.colaborador.nome %>
    </p>
    <hr>

    <%= form_with(model: @emprestimo, url: notebook_emprestimo_path(@notebook, @emprestimo)) do |form| %>

      <div class="mb-3">
        <%= form.label :data_devolucao, class: 'form-label' %>
        <%= form.date_field :data_devolucao, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= form.label :motivo_devolucao, "Motivo da Devolução", class: 'form-label' %>
        <%= form.text_area :motivo_devolucao, class: 'form-control', rows: 4 %>
      </div>

      <div class="actions mt-4">
        <%= form.submit "Confirmar Devolução", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>

<div class="mt-3">
  <%= link_to "Cancelar", @notebook, class: "btn btn-outline-secondary" %>
</div>